{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "lib": ["es2015"],
  "exclude": ["**/node_modules"],
  "include": ["src/**/*", "test/**/*"],
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
